        <div class="comment">
            <div class="row">
                <div class="col-3 nopadding text-center">
                   <b> {{ comment.author }} </b> le : <small> {{ comment.createdAt|date('d/m/y') }} a {{ comment.createdAt|date('h:i:s')  }}</small>
                </div>
                <div class="col nopadding">
                    {{ comment.content|raw }}
                </div>
            </div>

        </div>
    </section>
{% endfor %}


    {% set titre="<hr class='btn btn-info'  style='border: 2px solid #d6eaf8;border-radius: 5px;width:1086px'>"%}
