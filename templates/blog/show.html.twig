    {% if app.user %}
    <section class="display" style="margin-top: 30px;">
    {{ form_start(commentForm) }}
    {{ form_row(commentForm.author,{'attr': { 'placeholder':'votre Nome' }})  }}
    {{ form_row(commentForm.content,{'attr': { 'placeholder':'votre Commentaire' }})  }}
    <button type="submit" class="btn btn-success">Enregistrer Votre Commentaire</button>
    {{ form_end(commentForm) }}
    </section>
    {% else %}

        <span class="badge badge-info">
            <h3>Veuiller connecter pour commenter cet article !!
                <a href="{{ path('security_login') }}" class="badge badge-warning">Connecter</a>
            </h3>
        </span>

